
{
    
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build_exec_dbg",
        "detail": "build project with debug symbols",
        "type": "cppbuild",
        "command": "make",
        "args": [
            "build_exec_dbg"
        ],
        "options": {
